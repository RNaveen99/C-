
#include<iostream>
#include<stdio.h>
#include<string.h>
using namespace std;
int main()
{
	char x[10][50];
	int l=0,c=0,i;
	cout<<"enter 10 strings\n";
	for(i=0;i<10;i++)
	gets(x[i]);
	
	for(i=0;i<10;i++)
	{
		c=strlen(x[i]);
		if(c>l)
		{
			l=c;
		}
		
	}
	
	for(i=0;i<10;i++)
	{
		if(   l==strlen(x[i])  )
		{
			cout<<"longest string is\n"<<x[i];
		}
		
	}
}
